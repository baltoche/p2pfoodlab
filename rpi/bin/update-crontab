#!/bin/bash

home_dir=/var/p2pfoodlab
date=`date +"%Y%m%d-%H%M%S"`

echo "[update-crontab] Info: Backing up crontab to " $home_dir/backup/crontab-$date 2>&1 >> /var/p2pfoodlab/log.txt
crontab -u pi -l > $home_dir/backup/crontab-$date

if [ -s $home_dir/etc/crontab ]; then
    echo "[update-crontab] Info: Installing new crontab" 2>&1 >> /var/p2pfoodlab/log.txt
    crontab -u pi $home_dir/etc/crontab
else
    echo "[update-crontab] Info: Removing current crontab." 2>&1 >> /var/p2pfoodlab/log.txt
    crontab -u pi -r
fi
